pipeline {
    agent any

    environment {
        AWS_ACCOUNT_ID = '975049982453'  // Your AWS Account ID
        REGION = 'ca-central-1'          // AWS Region
        ECR_REPO = 'checkoutservice'     // Microservice ECR repo name
        IMAGE_TAG = "latest"
        DOCKER_IMAGE = "${AWS_ACCOUNT_ID}.dkr.ecr.${REGION}.amazonaws.com/${ECR_REPO}:${IMAGE_TAG}"
    }

    stages {
        stage('Checkout Code') {
            steps {
                // Pull code from the working EC2 instance repo path
                dir('/home/ubuntu/Google-Kubernetes-boilerplate/app/checkoutservice') {
                    script {
                        echo 'Checking out checkoutservice code from the local directory...'
                    }
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Build the Docker image for checkoutservice
                    sh """
                        docker build -t ${DOCKER_IMAGE} .
                    """
                }
            }
        }

        stage('Login to AWS ECR') {
            steps {
                script {
                    // Log in to AWS ECR
                    sh """
                        aws ecr get-login-password --region ${REGION} | docker login --username AWS --password-stdin ${AWS_ACCOUNT_ID}.dkr.ecr.${REGION}.amazonaws.com
                    """
                }
            }
        }

        stage('Push Image to ECR') {
            steps {
                script {
                    // Push the Docker image to ECR
                    sh """
                        docker push ${DOCKER_IMAGE}
                    """
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                script {
                    // Update the checkoutservice image in Kubernetes deployment
                    sh """
                        kubectl set image deployment/checkoutservice checkoutservice=${DOCKER_IMAGE} -n default
                    """
                }
            }
        }
    }

    post {
        success {
            echo 'Checkoutservice build and deployment successful.'
        }
        failure {
            echo 'Checkoutservice build or deployment failed.'
        }
    }
}
